<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title>
     <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="${context:favicon2.ico}" type="image/x-icon"/>
	</head>
   
	<t:border><div id="userListDiv">
	
		<h1>${message:userlist}</h1><hr/>
		<t:zone t:id="nomailgrid" id="nomailgrid" t:update="show">
			<t:if test="showNoMail">
				<t:grid source="nomails" reorder="email,admin,maker" row="nomail" add="Edit,Delete" exclude="lastLog,password,owner">
					<p:deletecell>
						<t:if test="!editing">
								<t:actionlink t:id="deletenomail" context="nomail.id" zone="^"><button>${message:delete-but}</button></t:actionlink>
						</t:if>
					</p:deletecell>
					<p:editcell>
						<t:if test="!editing">
							<t:actionlink t:id="editnomail" zone="^" context="nomail.id"><button>${message:edit-but}</button></t:actionlink>
						</t:if>
					</p:editcell>
					<p:adminCell>
					<t:if test="user.admin">
						<img src="${asset:context:/layout/tickv.png}" />
					<p:else>
						<img src="${asset:context:/layout/tickx.png}" />
					</p:else>
					</t:if>
				</p:adminCell>
				<p:makerCell>
					<t:if test="user.maker">
						<img src="${asset:context:/layout/tickv.png}" />
					<p:else>
						<img src="${asset:context:/layout/tickx.png}" />
					</p:else>
					</t:if>
				</p:makerCell>
				<p:studentCell>
					<t:if test="user.student">
						<img src="${asset:context:/layout/tickv.png}" />
					<p:else>
						<img src="${asset:context:/layout/tickx.png}" />
					</p:else>
					</t:if>
				</p:studentCell>					
					<p:empty>
					</p:empty>
				</t:grid>					
			</t:if>
		</t:zone>
		
		<t:zone t:id="usergrid" id="usergrid" t:update="show">	
			<t:grid source="users" reorder="email,owner,admin,maker" row="user" add="Edit,Delete" exclude="password">
				<p:editcell>
					<t:if test="!editing">
						<t:if test="!owner">
							<t:actionlink t:id="editbut" zone="^" context="user.id"><button>${message:edit-but}</button></t:actionlink>
						</t:if>
					</t:if>
				</p:editcell>
				<p:deleteCell>
					<t:if test="!editing">
						<t:if test="!owner">
							<t:actionlink t:id="deleteuser" context="user.id" zone="^"><button>${message:delete-but}</button></t:actionlink>
						</t:if>
					</t:if>
				</p:deleteCell>
				<p:idcell>
					${user.id }
				</p:idcell>
				<p:adminCell>
				<t:if test="user.admin">
					<img src="${asset:context:/layout/tickv.png}" />
				<p:else>
					<img src="${asset:context:/layout/tickx.png}" />
				</p:else>
				</t:if>
			</p:adminCell>
			<p:makerCell>
				<t:if test="user.maker">
					<img src="${asset:context:/layout/tickv.png}" />
				<p:else>
					<img src="${asset:context:/layout/tickx.png}" />
				</p:else>
				</t:if>
			</p:makerCell>
			<p:studentCell>
				<t:if test="user.student">
					<img src="${asset:context:/layout/tickv.png}" />
				<p:else>
					<img src="${asset:context:/layout/tickx.png}" />
				</p:else>
				</t:if>
			</p:studentCell>
			<p:ownerCell>
				<t:if test="user.owner">
					<img src="${asset:context:/layout/tickv.png}" />
				<p:else>
					<img src="${asset:context:/layout/tickx.png}" />
				</p:else>
				</t:if>
			</p:ownerCell>
				
				
			</t:grid>
		</t:zone>
		
		
		<t:zone t:id="editZone" id="editZone" t:update="show">
			<t:if test="editing">
				<t:form t:id="editForm" zone="^">
				<table>
				<tr>
						<td>
							<label>${message:admin-label}</label>
						</td>
						<td>
							<t:checkbox t:id="adminbox" t:value="editprof.admin"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:maker-label}</label>
						</td>
						<td>
							<t:checkbox t:id="makerbox" t:value="editprof.maker"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:email-label}</label>
						</td>
						<td>
							<t:textfield t:id="emailfield" t:value="editprof.email"/>
						</td>
						<td>
							<t:if test="nonavalible">
								<span class="error">${message:email-non-available}</span>
							</t:if>
						</td>
					</tr>
					
					<tr>
						<td>
							<label>${message:firstname-label}</label>
						</td>
						<td>
							<t:textfield t:id="firstnamefield" t:value="editprof.firstname"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:lastname-label}</label>
						</td>
						<td>
							<t:textfield t:id="lastnamefield" t:value="editprof.lastname"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:university-label}</label>
						</td>
						<td>
							<t:textfield t:id="universityfield" t:value="editprof.university"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:city-label}</label>
						</td>
						<td>
							<t:textfield t:id="cityfield" t:value="editprof.city"/>
						</td>
					</tr>
					<tr>
						<td>
							<label>${message:country-label}</label>
						</td>
						<td>
							<t:textfield t:id="countryfield" t:value="editprof.country"/>
						</td>
					</tr>
					<tr>
						<td><label>${message:fechaNac-label}</label></td>
						<td><t:DateField t:id="nacField" t:value="editprof.fechaNac"/></td>
					</tr>
					<tr>
						<td><label>${message:phone-label}</label></td>
						<td><t:textfield t:id="phonefield" t:value="editprof.phone"/></td>
					</tr>
					<tr>
						<td>
							<label>${message:address-label}</label>
						</td>
						<td>
							<t:textfield t:id="addresssField" t:value="editprof.address"/>
						</td>
					</tr>
					<tr>
						<td><label>${message:DNI-label}</label></td>
						<td><t:textfield t:id="dniField" t:value="editprof.DNI"/></td>
					</tr>
					
					<tr>
						<td><label>${message:carrera-label}</label></td>
						<td><t:textfield t:id="carreraField" t:value="editprof.carrera"/></td>
					</tr>
					<tr>
						<td><label>${message:centro-label}</label></td>
						<td><t:textfield t:id="centroField" t:value="editprof.centro"/></td>
					</tr>
					<tr>
						<td>
							<label><input t:type="submit" t:id="save" value="${message:save}"/></label>
						</td>
						<td>
							<input t:type="submit" t:id="cancel" value="${message:cancel}" t:mode="cancel"/>
						</td>
					</tr>
				</table>
				</t:form>
			
			
				
			</t:if>
		</t:zone>
		
		
	</div></t:border>
	
		
			
	


</html>
