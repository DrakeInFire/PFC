<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title></head>
   
	<t:border><div id="adminmaildiv">
	
		<h1>${message:admin-mail}</h1><hr/>
	
		<infouser>
		<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////// NO EMAIL ZONE /////////////////////////////////////////////////////////////////////
		   //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		   
		   
		<t:zone t:id="newEmailZone" id="newEmailZone" t:update="show" t:update="show">
			<t:if test="showNewZone">
				<h1>${message:no-mail}</h1>
				<t:form t:id="newForm" zone="^">
					<t:if test="badCombination">${message:invalid-epass}</t:if>
					<table>
						<tr>
							<td><label>${message:email}</label></td>
							<td><t:textfield t:id="emailAddress" t:value="emailform.email"/></td>
							<td><t:if test="badServer">${message:gmail-account}</t:if></td>
						</tr>
						<tr>
							<td><label>${message:password}</label></td>
							<td><t:passwordfield t:id="pass1"/></td>
							<td><t:if test="badMatch">${message:pass-notmatch}</t:if></td>
						</tr>
						<tr>
							<td><label>${message:repeat-pass}</label></td>
							<td><t:passwordfield t:id="pass2"/></td>
						</tr>
						<tr>
							<td></td>
							<td><input t:type="submit" value="${message:submit-but}"/></td>
						</tr>	
					</table>
				</t:form>
			</t:if>
		</t:zone>
		
	<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	    ////////////////////////////////////////////////////// EMAIL SETTINGS ZONE ///////////////////////////////////////////////////////////////
	   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		
		<t:zone t:id="emailSettingsZone" id="emailSettingsZone" t:update="show">
			<t:if test="showSettings">
				<table>
					<tr>
						<td><label>${message:email-account}:</label> </td>
						<td>${emailAccount.email}</td>
					</tr>
					<tr>
						<td><label>${message:epass}:</label></td>
						<td>${emailAccount.password}</td>
					</tr>
					<tr>
						<td><label>${message:valid-convination}:</label></td>
						<td>${validCombination}</td>
					</tr>
					
				</table>
				<t:actionlink t:id="changeAccount" t:zone="^"><button>${message:change-account}</button></t:actionlink>
				<t:actionlink t:id="changePass" t:zone="^"><button>${message:change-pass}</button></t:actionlink>
				<t:actionlink t:id="deleteAccount" t:zone="^"><button>${message:delete-account}</button></t:actionlink>
			</t:if>
		</t:zone>
		
	<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	    //////////////////////////////////////////////////////// CHANGE PASS ZONE ////////////////////////////////////////////////////////////////
	   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
	
		<t:zone t:id="changePassZone" id="changePassZone" t:update="show">
			<t:if test="showChange">
				<t:form t:id="changePassForm" zone="^">
					<t:if test="badCombination">
						${message:invalid-epass}
					</t:if>
					<table>
						<tr>
							<td><label>${message:adminPass}</label></td>
							<td><t:passwordfield t:id="adminPass"/></td>
							<td><t:if test="badPass">${message:bad-pass}</t:if></td>
						</tr>
						<tr>
							<td><label>${message:new-pass}</label></td>
							<td><t:passwordfield t:id="newPass1"/></td>
							<td><t:if test="badMatch">${message:pass-notmatch}</t:if></td>
						</tr>
						<tr>
							<td><label>${message:repeat-pass}</label></td>
							<td><t:passwordfield t:id="newPass2"/></td>
						</tr>
						<tr>
							<td>
								<input t:type="submit" t:value="${message:submit-but}"/>
 								<t:actionlink t:id="cancelChangePass" zone="^"><button>${message:cancel-but}</button></t:actionlink>
							</td>
						</tr>
					</table>
				</t:form>
			</t:if>
		</t:zone>	
		
	<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	    ////////////////////////////////////////////////////// CHANGE ACCOUNT ZONE ///////////////////////////////////////////////////////////////
	   ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
	   
	   
	   <t:zone t:id="changeAccountZone" id="changeAccountZone" t:update="show">
	   		<t:if test="showChangeAccount">
	   			<t:form t:id="changeAccountForm" zone="^">
					<t:if test="badCombination">
						${message:invalid-epass}
					</t:if>	   				
	   				<table>
	   					<tr>
	   						<td><label>${message:adminPass}</label></td>
	   						<td><t:passwordfield t:id="adminPassword"/></td>
	   						<td><t:if test="badPass">${message:bad-pass}</t:if></td>
	   					</tr>
	   					<tr>
	   						<td><label>${message:email}</label></td>
	   						<td><t:textfield t:id="emailChange" t:value="emailform.email"/></td>
	   						<td><t:if test="badServer">${message:gmail-account}</t:if></td>
	   					</tr>
	   					<tr>
	   						<td><label>${message:password}</label></td>
	   						<td><t:textfield t:id="password1"/></td>
	   						<td><t:if test="badMatch">${message:pass-notmatch}</t:if></td>
	   					</tr>
	   					<tr>
	   						<td><label>${message:repeat-pass}</label></td>
	   						<td><t:textfield t:id="password2"/></td>
	   					</tr>
	   					<tr>
							<td>
								<input t:type="submit" t:value="${message:submit-but}"/>
								<t:actionlink t:id="cancelChangeAccount" zone="^"><button>${message:cancel-but}</button></t:actionlink>
							</td>
						</tr>
	   				</table>
	   			</t:form>
	   		</t:if>
	   </t:zone>
	  </infouser>
	</div></t:border>
</html>