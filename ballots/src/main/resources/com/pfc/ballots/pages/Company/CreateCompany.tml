<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title></head>
   
	<t:border><div id="companyDiv">
	
		<h1>${message:create-company}</h1><hr/>
		<infouser>
		   <t:if test="isBadChar">
		   		<span class="error">${message:badChar}<br/></span>
		   </t:if>
		   
	       <t:beaneditform t:id="form" submitlabel="${message:create-but}" object="company" reorder="active" add="password,repeat,firstName,LastName">
		       <p:CompanyName>
		       		<t:label for="CompanyName"/>
		       		<t:textfield t:id="CompanyName" value="company.CompanyName"/>
		       		<span class="error">
			       		<t:if test="isnotCompanyNameAvalible">
							${message:non-available-company}	
						</t:if>
						<t:if test="isBadName">
			   				${message:badName}
			  			</t:if>
		  			</span>
		       </p:CompanyName>
		       <p:DBName>
		       		<t:label for="DBName"/>
		       		<t:textfield t:id="DBName" value="company.DBName" validate="required,minLength=6"/>
		       		<t:if test="isnotDBNameAvalible" >
						<span class="error">${message:non-available-db}</span>	
					</t:if>
		       </p:DBName>
		       <p:password>
		       		<t:label for="password"/>
		       		<t:passwordfield t:id="password" validate="required,minLength=6"/>
		       		<t:if test="isnotPassOk" >
						<span class="error">${message:pass-not-match}</span>
					</t:if>
		       </p:password>
		       
		       <p:repeat>
		       		<t:label for="repeat"/>
		       		<t:passwordfield t:id="repeat" validate="required,minLength=6"/>
		       </p:repeat>
		       
		       <p:firstName>
		       		<t:label for="firstName"/>
		       		<t:textfield t:id="firstName" value="profile.firstName" validate="required"/>
		       </p:firstName>
		       
		       <p:lastName>
		       		<t:label for="lastName"/>
		       		<t:textfield t:id="lastName" value="profile.lastName" validate="required"/>
		       </p:lastName>
		       
	       </t:beaneditform>
		</infouser>
	
	</div></t:border>
	
		
			
</html>
