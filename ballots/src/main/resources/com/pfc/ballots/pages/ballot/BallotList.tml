<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
	  <head><title>${message:page-title}</title>
	  <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="/favicon2.ico" type="image/x-icon"/>
	</head>
	
	<t:border><div id="ballotlistDiv">
		<t:if test="isAdmin">
			<h1>${message:admin-ballots}</h1><hr/>
			<p:else>
				<h1>${message:my-ballots}</h1><hr/>
			</p:else>
		</t:if>
		
		
		<t:zone t:id="gridZone" id="gridZone" t:update="show">
			<t:if test="showGrid">
					<t:if test="showMine">
							<t:actionlink t:id="mineBut" t:zone="^">${message:mine-ballots}</t:actionlink>
						<p:else>
							<t:actionlink t:id="allBut" t:zone="^">${message:all-ballots}</t:actionlink>
						</p:else>
				</t:if>
			
			
			
				<t:grid t:id="ballotsGrid" source="ballots" row="ballot" add="vote,result,kind,addusers,finish,delete,maker,census"
					rowsPerPage="15" inplace="true" reorder="maker,name,method,census" exclude="teaching,publica,id,notstarted,active,counted,description,idOwner,idballotdata,idCensus">
					<p:addusersCell>
						<t:if test="showAdd">
							<t:actionlink t:id="addUsersBut" t:context="ballot.id"><button>${message:add-users}</button></t:actionlink>
						</t:if>
					</p:addusersCell>
					<p:kindCell>
						<t:if test="ballot.publica">
							${message:public}
							<p:else>
								<t:if test="ballot.teaching">
									${message:teaching}
									<p:else>
										${message:private}
									</p:else>
								</t:if>
							</p:else>
						</t:if>
					</p:kindCell>
					<p:voteCell>
						<t:if test="canVote">
							<t:actionlink t:id="voteBallot" t:context="ballot.id"><img src="${asset:context:/layout/images/urn.png}" /></t:actionlink>
						</t:if>
					</p:voteCell>
					<p:endedCell>
						<t:if test="ballot.ended">
							<img src="${asset:context:/layout/locked.png}" />
						<p:else>
							<img src="${asset:context:/layout/unlocked.png}" />
						</p:else>
						</t:if>
						
					</p:endedCell>
					<p:makerCell>
						${username}
					</p:makerCell>
					<p:censusCell>
						${censusName}
					</p:censusCell>
					<p:deleteCell>
						<t:if test="myBallot">
							<t:actionLink t:id="deleteBallot" t:context="ballot.id" t:zone="^"><button>${message:delete-but}</button></t:actionLink>
						</t:if>
					</p:deleteCell>
					
					<p:finishCell>
						<t:if test="myBallot">
				
							<t:if test="!ballot.ended">
								<t:actionLink t:id="finishBallot" t:context="ballot.id" t:zone="^"><button>${message:finish-but}</button></t:actionLink>
							</t:if>
						</t:if>
					</p:finishCell>
					
					<p:resultCell>
						<t:actionlink t:id="resultBallot" t:context="ballot.id"><button>${message:result}</button></t:actionlink>
					</p:resultCell>
					<p:empty>
					</p:empty>
				</t:grid>
				<t:actionlink t:id="addBallot"><img src="${asset:context:/layout/images/plus.png}" /></t:actionlink>
				
			</t:if>
			
			
			
		</t:zone>
		
		
		<t:zone t:id="areuSureZone" id="areuSureZone" t:update="show">
			<t:if test="showAreuSure">
				<t:if test="optionDelete">
					Esta usted seguro de que quiere <strong>eliminar</strong> la votación <strong>${ballotSure.name}</strong> del usuario <strong>${userSure}</strong>
					<p:else>
						Esta usted seguro de que quiere <strong>finalizar</strong> la votación <strong>${ballotSure.name}</strong> del usuario <strong>${userSure}</strong>
					</p:else>
				</t:if>
				<br/>
				<t:actionLink t:id="isSure" t:zone="^"><button>${message:yes}</button></t:actionLink>
				<t:actionLink t:id="notSure" t:zone="^"><button>No</button></t:actionLink>
			</t:if>
		</t:zone>
		
	</div>
	</t:border>
</html>