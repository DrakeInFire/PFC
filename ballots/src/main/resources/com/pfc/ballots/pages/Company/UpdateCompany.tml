<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <head><title>${message:page-title}</title></head>
   
	<t:border><div id="companydiv">
		
		<h1>${message:updateCompany}</h1><hr/>
	
	<infouser>
	
	
		<t:zone t:id="formZone" id="formZone">
			<t:if test="showForm">
				<t:if test="showBadChar" class="error">
					${message:badChar}<br/>
				</t:if>
				<t:form t:id="updateCompanyForm" zone="^">
					<table>
						<tr>
							<td><t:label for="companyName"/></td>
							<td><t:textfield t:id="companyName" value="newCompany.companyName"/></td>
							<td>
								<t:if test="showNameInUse" class="error">
									${message:name-in-use}
								</t:if>
								<t:if test="showBadName" class="error">
									${message:bad-name}
								</t:if>
							</td>
						</tr>
						<tr>
							<td><label><input t:type="submit" t:value="${message:update-but}"/></label></td>
							<td><t:actionlink t:id="cancelBut" t:zone="^"><button>${message:cancel-but}</button></t:actionlink></td>
						</tr>
					</table>
				</t:form>
			</t:if>
		</t:zone>
		
	</infouser>
	</div></t:border>
</html>