<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title>
     <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="/favicon2.ico" type="image/x-icon"/></head>
   
	<t:border>
	<div id="showprofileDiv">
	<h1>${message:my-profile}</h1><hr/>
	
	<infouser>
	
	<!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	   ////////////////////////////////////////////// USER DATA ZONE /////////////////////////////////////////////////
	  ///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	  -->
		<t:zone t:id="userDataZone" id="userDataZone" t:update="show">
			<t:if test="showData">
				<table>
					<tr>
						<td>${message:admin}:</td>
						<td><t:if test="profile.admin">Yes<p:else>No</p:else></t:if></td>
					</tr>
					<tr>
						<td>${message:maker}:</td>
						<td><t:if test="profile.maker">Yes<p:else>No</p:else></t:if></td>
					</tr>
					<t:if test="companyUser">
						<tr>
							<td>${message:company}:</td>
							<td>${company.companyname }</td>
						</tr>
					</t:if>
					<tr>
						<td>${message:email}:</td>
						<td>${profile.email }</td>
					</tr>
					<tr>
						<td>${message:firstname}:</td>
						<td>${profile.firstname }</td>
					</tr>
					<tr>
						<td>${message:lastname}:</td>
						<td>${profile.lastname }</td>
					</tr>
					<tr>
						<td>${message:university}:</td>
						<td>${profile.university }</td>
					</tr>
					<tr>
						<td>${message:city}:</td>
						<td>${profile.city }</td>
					</tr>
					<tr>
						<td>${message:country}:</td>
						<td>${profile.country }</td>
					</tr>
					<tr>
						<td>${message:change-pass}</td>
						<td><t:actionlink t:id="changePass" zone="^"><button>${message:change-but}</button></t:actionlink></td>
					</tr>
					<tr>
						<td>${message:edit-profile}</td>
						<td><t:actionlink t:id="updateProfile" zone="^"><button>${message:edit-but}</button></t:actionlink></td>
					</tr>
					<t:if test="mainOwner">
						<tr>
							<td>${message:change-owner}</td>
							<td><t:pageLink page="admin/changePrincipalOwner"><button>${message:change-but}</button></t:pageLink></td>
						</tr>
					</t:if>
					<t:if test="notOwner">
						<tr>
							<td>${message:delete-account}</td>
							<td><t:actionlink t:id="deleteBut" t:zone="^"> <button>${message:delete-but}</button></t:actionlink></td>
						</tr>
					</t:if>
				</table>
			</t:if>
		</t:zone>
	<!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	   /////////////////////////////////////////////ARE U SURE TO DELETE//////////////////////////////////////////////
	  ///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	  -->	
		
	<t:zone t:id="areuSureZone" id="areuSureZone" t:update="show">
		<t:if test="showSure">
			${message:areuSure}
			<t:actionlink t:id="yesSureBut"><button>${message:yesSure}</button></t:actionlink>
			<t:actionlink t:id="notSureBut" t:zone="^"><button>No</button></t:actionlink>
		</t:if>
	</t:zone>		
		
		

	<!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	   /////////////////////////////////////////////CHANGE PASS ZONE /////////////////////////////////////////////////
	  ///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	  -->		
	   <t:zone t:id="changePassZone" id="changePassZone" t:update="show">
	   		<t:if test="showChange">
	   			<t:form t:id="changePassForm" zone="^">
	   				<table>
	   					<tr>
	   						<td><t:label for="pass"/></td>
	   						<td><t:passwordfield t:id="pass"/></td>
	   						<td><t:if test="badPass">${message:invalid-pass}</t:if></td>
	   					</tr>
	   					<tr>
	   						<td><t:label for="newPass1"/></td>
	   						<td><t:passwordfield t:id="newPass1"/></td>
	   						<td><t:if test="badMatch">${message:pass-not-match}</t:if></td>
	   					</tr>
	   					<tr>
	   						<td><t:label for="newPass2"/></td>
	   						<td><t:passwordfield t:id="newPass2"/></td>
	   					</tr>
	   					<tr>
	   						<td></td>
	   						<td><input t:type="submit" value="${message:save-but}"/>
	   						<t:actionlink t:id="cancelChangePass" t:zone="^"><button>${message:cancel-but}</button></t:actionlink></td>
	   					</tr>
	   				</table>
	   			</t:form>
	   		</t:if>
	   </t:zone>
	
	<!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	   ///////////////////////////////////////// UPDATE PROFILE ZONE /////////////////////////////////////////////////
	  ///////////////////////////////////////////////////////////////////////////////////////////////////////////////
	 -->
	 	<t:zone t:id="updateProfileZone" id="updateProfileZone" t:update="show">
	 		<t:if test="showUpdate">
	 			<t:form t:id="updateForm" zone="^">
	 				<table>
	 					<tr>
	 						<td><t:label for="emailfield"/></td>
	 						<td><t:textfield t:id="emailField" value="update.email"/></td>
	 						<td><t:if test="badMail">Email en uso</t:if></td>
	 					</tr>
	 					<tr>
	 						<td><t:label for="namefield"/></td>
	 						<td><t:textfield t:id="nameField" value="update.firstname"/></td>
	 					</tr>
	 					<tr>
	 						<td><t:label for="lastfield"/></td>
	 						<td><t:textfield t:id="lastField" value="update.lastname"/></td>
	 					</tr>
	 					<tr>
	 						<td><t:label for="universityfield"/></td>
	 						<td><t:textfield t:id="universityField" value="update.university"/></td>
	 					</tr>
	 					<tr>
	 						<td><t:label for="cityfield"/></td>
	 						<td><t:textfield t:id="cityField" value="update.city"/></td>
	 					</tr>
	 					<tr>
	 						<td><t:label for="countryfield"/></td>
	 						<td><t:textfield t:id="countryField" value="update.country"/></td>
	 					</tr>
	 					<tr>
	 						<td></td>
	 						<td>
	 							<input t:type="submit" value="${message:save-but}"/>
	 							<t:actionlink t:id="cancelUpdate" zone="^"><button>${message:cancel-but}</button></t:actionlink>
	 						</td>
	 					</tr>
	 				</table>
	 			</t:form>
	 		</t:if>
	 	</t:zone>
	</infouser>
	</div>
	</t:border>
</html>