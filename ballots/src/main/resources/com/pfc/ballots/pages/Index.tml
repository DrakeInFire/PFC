<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <head><title>${message:page-title}</title></head>
  
	<t:border>
	
		<t:if test="!showRegistred">
			Bienvenidos a mi pagina web
			<p:else>
				<div class="ballotsList">
					
					<t:if test="!showCurrent">
						${message:no-ballots}
					</t:if>
					
					
					
					<t:if test="showCurrent">
						 <table>
							 <tr><th>Todas</th></tr>
							 <t:loop t:source="currentBallots" t:value="ballot">
									<tr><td>Nombre->${ballot.name}</td></tr>
							</t:loop>
						</table>
					</t:if>
					<t:if test="showNotStarted">
						<table>
					 		 <tr><th>No empezadas</th></tr>
						 	 <t:loop t:source="nonActiveBallots" t:value="ballot">
						 	 	<tr><td>Nombre->${ballot.name}</td></tr>
						 	 </t:loop>
					 	</table>
					</t:if>
					<t:if test="showActive">
						<table>
							 <tr><th>Activas</th></tr>
							 <t:loop t:source="activeBallots" t:value="ballot">
									<tr><td><t:actionlink t:id="voteBallot" t:context="ballot.id"> Nombre->${ballot.name}</t:actionlink></td></tr>
							</t:loop>
						</table>
					</t:if>
					<t:if test="showEnded">
						<table>
							 <tr><th>Terminadas</th></tr>
							 <t:loop t:source="endedBallots" t:value="ballot">
									<tr><td><t:actionlink t:id="resultBallot" context="ballot.id">Nombre->${ballot.name}</t:actionlink></td></tr>
							</t:loop>
						</table>
					</t:if>
				</div>
			</p:else>
		</t:if>
	
	</t:border>
	
		
			
	


</html>
