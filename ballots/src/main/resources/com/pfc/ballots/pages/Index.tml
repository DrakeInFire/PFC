<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <head><title>${message:page-title}</title></head>
  
	<t:border>
	
		<t:if test="!showRegistred">
			Bienvenidos a mi pagina web
			<p:else>
				<div class="ballotsList">
					
					<t:if test="!showCurrent">
						${message:no-ballots}
					</t:if>
				
					<t:if test="showNotStarted">
						<table>
					 		 <tr><th>No empezadas</th></tr>
						 	 <t:loop t:source="nonActiveBallots" t:value="ballot">
						 	 	<tr><td>Nombre->${ballot.name}</td></tr>
						 	 </t:loop>
					 	</table>
					</t:if>
			
					
				 <!--  <t:if test="showActive">
						Activas
							 <t:loop t:source="activeBallots" t:value="ballot">
							 <div class="row">
								<span><t:actionlink t:id="voteBallot" t:context="ballot.id"> Nombre->${ballot.name}</t:actionlink>&nbsp;&nbsp;&nbsp;&nbsp;</span>
							
								 <t:if test="ballot.teaching">
										<span>Docente&nbsp;&nbsp;&nbsp;</span>
										<p:else>
											<span>Normal&nbsp;&nbsp;&nbsp;</span>
										</p:else>
								</t:if>
								 <span>${metodo}&nbsp;&nbsp;&nbsp;</span>
							 </div>
							</t:loop>
						
					</t:if>
					-->
					
					<t:if test="showActive">
						Activas<br/>
							 <t:loop t:source="activeBallots" t:value="ballot">
							 <div t:type="actionlink" t:id="voteBallot" t:context="ballot.id" class="indexRow">
								<span> Nombre->${ballot.name}&nbsp;&nbsp;&nbsp;&nbsp;</span>
							
								 <t:if test="ballot.teaching">
										<span>Docente&nbsp;&nbsp;&nbsp;</span>
										<p:else>
											<span>Normal&nbsp;&nbsp;&nbsp;</span>
										</p:else>
								</t:if>
								 <span>${metodo}&nbsp;&nbsp;&nbsp;</span>
								 <br/>
							 </div>
							</t:loop>
						
					</t:if>
					
					<t:if test="showEnded">
							
							 Terminadas<br/>
							 <t:loop t:source="endedBallots" t:value="ballot">
							 	 <div t:type="actionlink" t:id="resultBallot" context="ballot.id" class="indexRow" >
									<span>Nombre->${ballot.name}&nbsp;&nbsp;&nbsp;&nbsp;</span>
								
								<t:if test="ballot.teaching">
										<span>Docente&nbsp;&nbsp;&nbsp;</span>
										<p:else>
											<span>Normal&nbsp;&nbsp;&nbsp;</span>
										</p:else>
								</t:if>
								 <span>${metodo}&nbsp;&nbsp;&nbsp;</span>
								 <br/>
								 </div>
							</t:loop>
						
					</t:if>
				</div>
			</p:else>
		</t:if>
	
	</t:border>
	
		
			
	


</html>
