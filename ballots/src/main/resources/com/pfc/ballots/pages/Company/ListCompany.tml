<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title></head>
   
	<t:border><div id="companydiv">
		
		<h1>${message:company-list}</h1><hr/>
		
		
		<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////// COMPANY GRID ZONE /////////////////////////////////////////////////////////////////
		   //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		
		<t:zone t:id="companyGridZone" id="companyGridZone">
			<t:if test="!showSure">
				<t:grid source="companies" row="company" add="seeusers,addusers,deletecompany,addusersfile,ChangeActive" reorder="active">
					
					<p:addusersfilecell>
							<t:actionlink t:id="addbyfile" context="company.DBName"><button>${message:addfile-but}</button></t:actionlink>
					</p:addusersfilecell>
					<p:seeusersCell>
							<t:actionlink t:id="ver" context="[company.CompanyName,company.DBName]"><button>${message:see-but}</button></t:actionlink>
					</p:seeusersCell>
					<p:addusersCell>
							<t:actionlink t:id="addusers" context="[company.CompanyName,company.DBName]"><button>${message:add-but}</button></t:actionlink>
					</p:addusersCell>
					<p:deletecompanyCell>
							<t:actionlink t:id="delete" context="company.CompanyName"><button>${message:delete-but}</button></t:actionlink>
					</p:deletecompanyCell>
					<p:changeActiveCell>
							<t:if test="company.active">
								<t:actionlink t:id="deactivateBut" context="company.companyName" zone="^"><button>${message:deactivate-but}</button></t:actionlink>
							</t:if>
							<t:if test="!company.active">
								<t:actionlink t:id="activateBut" context="company.companyName" zone="^"><button>${message:activate-but}</button></t:actionlink>
							</t:if>
					</p:changeActiveCell>
				</t:grid>
			</t:if>
		</t:zone>
		
		
		
		<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////// AREUSURE ZONE /////////////////////////////////////////////////////////////////////
		   //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		
		<t:zone t:id="areuSureZone" id="areuSureZone">
			<t:if test="showSure">
				${message:are-u-sure}<t:if test="status">${message:activate-but}<p:else>desctivar</p:else></t:if><b>${toCheck.companyName }</b><br/>
				<t:actionlink t:id="isSureBut" zone="^"><button>${message:yes-but}</button></t:actionlink>
				<t:actionlink t:id="isNotSureBut" zone="^"><button>${message:not-but}</button></t:actionlink>
			</t:if>
		</t:zone>
	
	</div></t:border>
	
		
			
</html>
