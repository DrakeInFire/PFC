<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
   
	<t:border>
		
		<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////// COMPANY GRID ZONE /////////////////////////////////////////////////////////////////
		   //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		
		<t:zone t:id="companyGridZone" id="companyGridZone">
			<t:if test="!showSure">
				<t:grid source="companies" row="company" add="See Users,Add users,Delete Company,Add Users File,ChangeActive" reorder="active">
					
					<p:addusersfilecell>
							<t:actionlink t:id="addbyfile" context="company.DBName"><button>AddFile</button></t:actionlink>
					</p:addusersfilecell>
					<p:seeusersCell>
							<t:actionlink t:id="ver" context="[company.CompanyName,company.DBName]"><button>VER</button></t:actionlink>
					</p:seeusersCell>
					<p:addusersCell>
							<t:actionlink t:id="addusers" context="[company.CompanyName,company.DBName]"><button>ADD</button></t:actionlink>
					</p:addusersCell>
					<p:deletecompanyCell>
							<t:actionlink t:id="delete" context="company.CompanyName"><button>DELETE</button></t:actionlink>
					</p:deletecompanyCell>
					<p:changeActiveCell>
							<t:if test="company.active">
								<t:actionlink t:id="deactivateBut" context="company.companyName" zone="^"><button>deactivate</button></t:actionlink>
							</t:if>
							<t:if test="!company.active">
								<t:actionlink t:id="activateBut" context="company.companyName" zone="^"><button>activate</button></t:actionlink>
							</t:if>
					</p:changeActiveCell>
				</t:grid>
			</t:if>
		</t:zone>
		
		
		
		<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
			//////////////////////////////////////////////// AREUSURE ZONE /////////////////////////////////////////////////////////////////////
		   //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		
		<t:zone t:id="areuSureZone" id="areuSureZone">
			<t:if test="showSure">
				Esta seguro de que quiere <b><t:if test="status">activar<p:else>desctivar</p:else></t:if></b> la compaï¿½ia <b>${toCheck.companyName }</b><br/>
				<t:actionlink t:id="isSureBut" zone="^"><button>SI</button></t:actionlink>
				<t:actionlink t:id="isNotSureBut" zone="^"><button>NO</button></t:actionlink>
			</t:if>
		</t:zone>
	
	</t:border>
	
		
			
</html>
